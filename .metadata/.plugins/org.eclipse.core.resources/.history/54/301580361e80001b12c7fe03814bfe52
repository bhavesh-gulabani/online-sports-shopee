package com.cg.sports;
import org.junit.Assert;

import org.junit.jupiter.api.*;
import org.junit.jupiter.api.Test;

import com.cg.sports.bean.User;
import com.cg.sports.dao.IUserRepositoryImpl;

class IUserRepoImplSpecs 
{

	User u = new User(1111,"1234","Customer");
	IUserRepositoryImpl userepo = new IUserRepositoryImpl();
	
	@BeforeAll
	void beforeAllTest()
	{
		System.out.println("start testing");
	}
	
	@AfterAll
	void afterAllTest()
	{
		System.out.println("end testing");
	}
	
	@BeforeEach
	void beforeEachTest()
	{
		System.out.println("before testing");
	}
	
	@AfterEach
	void afterEachTest()
	{
		System.out.println("after testing");
	}
	
	
	@Test
	void test1() {
		System.out.println("Test1");
		User returnUser = userepo.signIn(u);
		Assert.assertNotNull(returnUser);
        Assert.assertEquals(u,returnUser); 
	}
	
	
	
	
	@Test
	void test2() {
		System.out.println("Test2");
		User returnUser = userepo.signOut(u);
		Assert.assertEquals(u,returnUser);	
	}
	

	@Test
	void test3() {
		System.out.println("Test3");
		User returnUser = userepo.changePassword(u);
		String password = "abcd";
		Assert.assertEquals("abcd",returnUser);

		
		
	}

}
